<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="0dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">


            <TextView
                android:id="@+id/txtTitle"
                style="@style/newsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/demo_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtAuthor_"
                    style="@style/newsPublicTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bá»Ÿi " />

                <TextView
                    android:id="@+id/txtAuthor"
                    style="@style/newsPublicTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/txtAuthor_"
                    android:layout_toRightOf="@id/txtAuthor_"
                    android:text="@string/tuy_t_nga" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtDescription"
                style="@style/newsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="3"
                android:text="@string/demo_desciption"
                android:typeface="sans" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/imgPublicTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock_circular_outline" />

                <TextView
                    android:id="@+id/txtPublicTime"
                    style="@style/newsPublicTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toEndOf="@+id/imgPublicTime"
                    android:layout_toRightOf="@id/imgPublicTime"
                    android:text="@string/new_demo_createTime" />

                <ImageView
                    android:id="@+id/imgCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/txtPublicTime"
                    android:layout_toRightOf="@+id/txtPublicTime"
                    android:src="@drawable/ic_news_category" />

                <TextView
                    android:id="@+id/txtCategories"
                    style="@style/newsPublicTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toEndOf="@+id/imgCategories"
                    android:layout_toRightOf="@+id/imgCategories"
                    android:maxLines="1"
                    android:text="@string/demo_news_category" />
            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">

        <TextView
            android:id="@+id/txt_name_exam"
            style="@style/textsNameExamResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <LinearLayout
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:padding="4dp"
            android:layout_marginStart="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtSbd"
                            style="@style/txtSubjectExam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sdb" />

                        <TextView
                            android:id="@+id/txt_candidate_number"
                            style="@style/txtSubjectExam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/txtSbd"
                            android:layout_toRightOf="@id/txtSbd" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtDateExam"
                            style="@style/txtSubjectExam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_exam" />

                        <TextView
                            android:id="@+id/date_exam"
                            style="@style/txtSubjectExam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/txtDateExam"
                            android:layout_toRightOf="@+id/txtDateExam" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtTypeExam"
                            style="@style/txtSubjectExam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/typeExam" />

                        <TextView
                            android:id="@+id/type_exam"
                            style="@style/txtSubjectExam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/txtTypeExam"
                            android:layout_toRightOf="@+id/txtTypeExam" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtMsv"
                        style="@style/txtSubjectExam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/msv2" />

                    <TextView
                        android:id="@+id/txt_msv"
                        style="@style/txtSubjectExam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/txtMsv"
                        android:layout_toRightOf="@+id/txtMsv" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtMmh"
                        style="@style/txtSubjectExam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mmh" />

                    <TextView
                        android:id="@+id/txt_code_subject"
                        style="@style/txtSubjectExam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/txtMmh"
                        android:layout_toRightOf="@+id/txtMmh" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtRoomExam"
                        style="@style/txtSubjectExam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/roomExam" />

                    <TextView
                        android:id="@+id/room_exam"
                        style="@style/txtSubjectExam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/txtRoomExam"
                        android:layout_toRightOf="@+id/txtRoomExam" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
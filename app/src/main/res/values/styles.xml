<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="newsTitle">
        <item name="android:text">Tinh te</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="newsDescription">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="newsPublicTime">
        <item name="android:textColor">@color/black_gray</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="textsNameExamResult">
        <item name="android:text">@string/trash_1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textCodeSubject">
        <item name="android:textColor">@color/black_gray</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="textEmailFb">
        <item name="android:textColor">@color/black_gray</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textTimePublicExamResult">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black_gray</item>
    </style>

    <style name="txtSubjectExam">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black_gray</item>
    </style>

    <style name="SplashTheme" parent="CustomTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="txtSettingItem">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
